{
  "manifest_version": 3,
  "name": "درع العراق",
  "description": "أداة تحميك من المواقع الضارة - بإشراف أبناء العراق",
  "version": "1.0",
  "permissions": ["webRequest", "webRequestBlocking", "<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "icons": {
    "128": "icon128.png"
  }
}
